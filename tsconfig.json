{
  "compilerOptions": { 
    "rootDir": ".",
    "types": ["node"],
    "target": "es2016",                                  
    "module": "commonjs",                                
    "moduleDetection": "force",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist"
  }
}
